{
  "name": "monorepo",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brianjenkins94/monorepo.git"
  },
  "author": "Brian Jenkins",
  "bugs": {
    "url": "https://github.com/brianjenkins94/monorepo/issues"
  },
  "homepage": "https://github.com/brianjenkins94/monorepo#readme",
  "type": "module",
  "bin": "scripts/npx.mjs",
  "scripts": {
    "purge": "find . \\( -name \"node_modules\" -or -name \".next\" -or -name \"out\" -or -name \"package-lock.json\" \\) -prune -exec rm -rf \"{}\" \\;",
    "workspaceify": "npm pkg set workspaces[]='apps/*' workspaces[]='packages/*' && rm package-lock.json && npm install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint": "^7.32.0",
    "turbo": "latest",
    "typescript": "latest"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
