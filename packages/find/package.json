{
  "name": "find",
  "version": "0.1.0",
  "description": "Approximation of GNU find with `-exec` support.",
  "author": "Brian Jenkins",
  "license": "MIT",
  "main": "find.ts",
  "types": "find.ts",
  "type": "module",
  "scripts": {
    "dev": "npm run build --watch",
    "build": "tsup find.ts --format esm --dts",
    "test": "node --experimental-specifier-resolution=node --loader=ts-node/esm find.ts"
  },
  "dependencies": {
    "glob": "github:isaacs/node-glob#v9"
  },
  "devDependencies": {
    "@types/node": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint": "^7.32.0",
    "ts-node": "latest",
    "tsup": "latest",
    "typescript": "latest"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/find.js",
      "types": "./dist/find.d.ts"
    }
  },
  "files": [
    "dist/"
  ],
  "sideEffects": false
}
